# Environment-specific Talos Configuration Values
# Copy this to talos-values.yaml and fill in your actual values
# IMPORTANT: talos-values.yaml is gitignored (contains secrets)

# Control Plane Node
controlplane:
  name: cp01-main
  ip: "hostname"
  rescue_password: "REPLACE_WITH_ACTUAL_PASSWORD"

# Worker Nodes
workers:
  - name: worker01
    ip: "hostname"
    rescue_password: "REPLACE_WITH_ACTUAL_PASSWORD"
    labels:
      workload.dev/intelligence: "true"
      workload.dev/databases: "true"
      workload-type: stateful
      topology.kubernetes.io/zone: worker01

# Cluster Configuration
cluster:
  name: dev-01
  podSubnet: "10.244.0.0/16"
  serviceSubnet: "10.96.0.0/12"
  dnsDomain: cluster.local

# Talos
talos:
  version: v1.11.5

# Kubernetes
kubernetes:
  version: v1.34.1
